<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd">

    <import resource="loggers.xml"/>

    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:client.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
    </bean>

    <bean id="client" class="com.yura.spring.demo.course.client.Client">
        <constructor-arg index="0" value="${id}"/>
        <constructor-arg index="1" value="${name}"/>
        <property name="greeting" value="${greeting}"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

    <bean id="event" class="com.yura.spring.demo.course.event.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat" />
    </bean>

    <bean id="app" class="com.yura.spring.demo.course.App">
        <constructor-arg ref="client"/>
        <constructor-arg value="#{ T(com.yura.spring.demo.course.event.Event).isDay() ? cachedFileEventLogger : eventLogger }"/>
        <constructor-arg ref="loggerMap"/>
    </bean>

    <util:map id="loggerMap">
        <entry key="INFO" value-ref="eventLogger"/>
        <entry key="ERROR" value-ref="cachedFileEventLogger"/>
    </util:map>

</beans>